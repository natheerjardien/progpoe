@using PROG6212_ST10435542_POE.Models.ViewModels.Lecturer

@model SubmitClaimViewModel
@{
    ViewData["Title"] = "Submit New Claim";
}

@* I made use of Empty Razor View and incorporated code from previous MVC projects and made minor tweaks to my liking *@
@* These views mainly made use of the ViewModels ive created in order to manipulate which data i wanted in specific views, instead of the mai models according to the database schema *@

<h1>Lecturer</h1>
<p></p>
<h4>Submit New Claim</h4>
<p>Fill in the details for your monthly claim and upload any supporting documents.</p>

<div class="row">
    <div class="col-md-6">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (ViewBag.FileMessage != null)
        {
            <div class="alert alert-info">@ViewBag.FileMessage</div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">Please fix the errors below and try again.</div>
        }
        <form asp-controller="Lecturer" asp-action="SubmitClaim" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.FileMessage != null)
            {
                <div class="alert alert-success">@ViewBag.FileMessage</div>
            }

            <h3>Claim Details</h3>
            <div class="form-group mb-3">
                <label asp-for="ClaimPeriod">Claim Period:</label>
                <input asp-for="ClaimPeriod" class="form-control" />
                <span asp-validation-for="ClaimPeriod" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HourlyRate">Your Hourly Rate:</label>
                <input asp-for="HourlyRate" type="number" step="0.01" placeholder="R 400.00" class="form-control" />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TotalHoursWorked">Total Hours Worked for Period:</label>
                <input asp-for="TotalHoursWorked" type="number" step="0.5" placeholder="20.5" class="form-control" />
                <span asp-validation-for="TotalHoursWorked" class="text-danger"></span>
            </div>

            @* <div class="form-group">
                <label>Estimated Total Amount:</label>
                <input asp-for="TotalAmount" class="form-control" readonly />
            </div> *@

            <div class="form-group">
                <label asp-for="Notes">Additional Notes:</label>
                <textarea asp-for="Notes" class="form-control" placeholder="Type here..." rows="4"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <p></p>
            <h3 class="mt-4">Detailed Work Entries (Optional)</h3>
            <div>
                <button type="button" class="btn btn-outline-primary">Add Work Entry</button>
            </div>
            <p></p>

            <h3 class="mt-4">Supporting Documents</h3>
            <div class="form-group">
                <label asp-for="SupportingDocument">Upload Supporting Document (PDF, DOCX, XLSX):</label>
                <input asp-for="SupportingDocument" type="file" class="form-control"/>
                <span asp-validation-for="SupportingDocument" class="text-danger"></span>
            </div>
            <p></p>
            <button type="submit" class="btn btn-primary">Submit Claim</button>
        </form>
    </div>
</div>