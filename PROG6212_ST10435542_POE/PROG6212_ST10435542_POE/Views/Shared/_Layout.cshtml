@using Microsoft.AspNetCore.Identity
@using PROG6212_ST10435542_POE.Models.Data
@using PROG6212_ST10435542_POE.Models.Enums
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROG6212_ST10435542_POE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROG6212_ST10435542_POE.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PROG6212_ST10435542_POE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="navbarColor01" aria-controls="navbarColor02"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarColor02">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @* --- HR NAVIGATION (SUPER USER) --- *@
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole(UserRoleEnum.HR.ToString()))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="hrDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    HR Management
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="hrDropdown">
                                    <li><a class="dropdown-item" asp-controller="HR" asp-action="ManageUsers">Manage Users</a></li>
                                    <li><a class="dropdown-item" asp-controller="HR" asp-action="AddUser">Add New User</a></li>
                                    <li><a class="dropdown-item" asp-controller="HR" asp-action="GenerateReport">Generate Reports</a></li>
                                </ul>
                            </li>
                        }

                        @* --- LECTURER NAVIGATION --- *@
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole(UserRoleEnum.Lecturer.ToString()))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Lecturer" asp-action="SubmitClaim">Submit Claim</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Lecturer" asp-action="ClaimStatusTracker">Track Claims</a>
                            </li>
                        }

                        @* --- PROGRAMME COORDINATOR NAVIGATION --- *@
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole(UserRoleEnum.ProgrammeCoordinator.ToString()))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="pcDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Coordinator Review
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="pcDropdown">
                                    <li><a class="dropdown-item" asp-controller="ProgrammeCoordinator" asp-action="PendingClaims">Pending Claims</a></li>
                                    <li><a class="dropdown-item" asp-controller="ProgrammeCoordinator" asp-action="ProcessedClaims">Processed Claims</a></li>
                                </ul>
                            </li>
                        }

                        @* --- ACADEMIC MANAGER NAVIGATION --- *@
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole(UserRoleEnum.AcademicManager.ToString()))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="amDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Manager Review
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="amDropdown">
                                    <li><a class="dropdown-item" asp-controller="AcademicManager" asp-action="PendingClaims">Pending Claims</a></li>
                                    <li><a class="dropdown-item" asp-controller="AcademicManager" asp-action="ProcessedClaims">Processed Claims</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    @* --- LOGIN/LOGOUT SECTION --- *@
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">
                                    Hello, @(UserManager.GetUserAsync(User).Result?.FirstName ?? User.Identity.Name)! (@(UserManager.GetRolesAsync(UserManager.GetUserAsync(User).Result).Result.FirstOrDefault() ?? "No Role"))
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PROG6212_ST10435542_POE - Developed by Natheer Jardien
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
